@import "../../static/css/weui.wxss";

.entrance-check{
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content: space-around;
    margin-top: 83rpx;
}

.e-check-item{
    display: inline-block;
    border: 1px solid #4dcbca;
    border-radius: 33rpx;
    box-shadow: 0rpx 0rpx 15rpx  #4dcbca;
    width: 316rpx;
    height: 322rpx;
    margin-top: 37rpx;
    overflow: hidden;
}

.e-c-i-resouce{
    width: 300rpx;
    height: 300rpx;
    margin:10rpx;
}

.e-c-i-resouce image{
    width: 100%;
    height: 100%;
}

.e-c-i-bookname{
    width:279rpx;
    height:52rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    margin:0 20rpx 15rpx 17rpx;
}

.e-c-i-b-text{
    width: 279rpx;
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.e-c-i-icon{
    width: 73rpx;
    height: 71rpx;
    margin: 86rpx 0 0 122rpx;
    background-size: 100% 100%;
}

.e-c-i-icon.icon-doubt{
    width: 110rpx;
    height: 110rpx;
    margin: 102rpx 103rpx 110rpx;
}


.e-c-i-text{
    width: 288rpx;
    height: 56rpx;

    font-size:24rpx;
    font-weight:400;
    margin: 36rpx auto 0;
    text-align: center;
}

.btn-margin-top{
    margin: 35rpx auto;
    width: 90%;

}

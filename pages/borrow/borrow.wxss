.entrance-check{
    display: flex;
    flex-direction: row;
    flex-wrap:wrap;
    justify-content: space-around;
    margin-top: 83rpx;
}

.e-check-item{
    display: inline-block;
    border: 1px solid #4dcbca;
    border-radius: 33rpx;
    box-shadow: 0rpx 0rpx 15rpx  #4dcbca;
    width: 316rpx;
    height: 322rpx;
    margin-top: 37rpx;
    overflow: hidden;
}


.e-c-i-img{
    width: 100%;
    height: 100%;
}

.e-c-i-img image{
    width: 80%;
    height: 80%;
    padding: 10%;
}

.e-c-i-resouce{
    width: 200rpx;
    height: 200rpx;
    margin: 35rpx 61rpx 15rpx 55rpx;
}

.e-c-i-resouce image{
    max-width: 100%;
    max-height: 100%;
}

.e-c-i-bookname{
    width:279rpx;
    height:52rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    margin:0 20rpx 15rpx 17rpx;
}

.e-c-i-b-text{
    text-align: center;
    width: 279rpx;
    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.e-c-i-icon{
    width: 73rpx;
    height: 71rpx;
    margin: 86rpx 0 0 122rpx;
    background-size: 100% 100%;
}

.e-c-i-icon.icon-doubt{
    width: 110rpx;
    height: 110rpx;
    margin: 102rpx 103rpx 110rpx;
}


.e-c-i-text{
    width: 288rpx;
    height: 56rpx;

    font-size:24rpx;
    font-weight:400;
    margin: 36rpx auto 0;
    text-align: center;
}

.btn-array{
    margin-top: 200rpx;
    text-align: center;
}

.b-a-btn{
    width: 360rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size:32rpx;
    border-radius:10px;
    margin: 23rpx 195rpx 0;
    display: inline-block;
}

.b-a-text{
    font-size:32rpx;
    font-weight:400;
    color:rgba(11,161,152,1);
}

.b-a-text.b-a-success{
    color: rgba(11, 161, 152, 1);
}

.b-a-text.b-a-fail{
    color: rgba(255, 31, 31, 1);
}

.b-a-btn.b-a-loading{
    border:1px solid rgba(204, 204, 204, 1);
    color: rgba(204, 204, 204, 1);
}

.b-a-btn.b-a-borrow{
    border:1px solid rgba(11, 161, 152, 1);
    color: rgba(11, 161, 152, 1);
}

.b-a-btn.b-a-again{
    border:1px solid rgba(255, 31, 31, 1);
    color: rgba(255, 31, 31, 1);
}

.r-label{
    height: 106rpx;
    line-height: 106rpx;
    font-size: 30rpx;
    font-weight: 500;
    color:rgba(51,51,51,1);
    padding-left: 47rpx;
}



.r-list{
    width: 690rpx;
    margin: 0 auto;
    padding-bottom: 100rpx;
}

.r-l-item{
    height: 250rpx;
    border: 1px solid #4dcbca;
    border-radius: 18rpx;
    box-shadow:0px 3px 6px 0px rgba(77,203,202,0.75);
    margin-bottom: 27rpx;
    position: relative;
}

.r-l-item.r-l-item-return{
    border: 1px solid #959594;
    box-shadow:0px 5px 13px 0px #959594;

}

.r-l-i-img{
    width: 200rpx;
    height: 200rpx;
    margin: 25rpx 35rpx;
    text-align: center;
}

.r-l-i-img image{
    width: 200rpx;
    height: 200rpx;
}

.r-l-item>view{
    float: left;
}

.r-l-i-msg{
    width: 391rpx;
    margin-top: 29rpx;
}


.r-l-i-name{
    font-size:28rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    height: 83rpx;

    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}


.r-l-i-b-btn{
    width:120rpx;
    height:50rpx;
    line-height:50rpx;
    text-align: center;
    border:1px solid rgba(77, 203, 202, 1);
    border-radius:15rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(77,203,202,1);

    position: absolute;
    right: 40rpx;
    bottom: 40rpx;
}

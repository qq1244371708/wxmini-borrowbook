.r-title{
    height: 110rpx;
    line-height: 110rpx;
    background-color: #4dcbca;
    padding: 0 30rpx;
    font-size:30rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
}

.r-title-r{
    float: right;
    font-size: 24rpx;
    border: 1px solid #fff;
    height: 50rpx;
    width: 120rpx;
    line-height: 50rpx;
    text-align: center;
    margin: 30rpx 0;
    border-radius: 15rpx;
}

.r-label{
    height: 106rpx;
    line-height: 106rpx;
    font-size: 30rpx;
    font-weight: 500;
    color:rgba(51,51,51,1);
    padding-left: 47rpx;
}

.r-list{
    width: 690rpx;
    margin: 0 auto;
    padding-bottom: 100rpx;
}

.r-l-item{
    height: 250rpx;
    border: 1px solid #4dcbca;
    border-radius: 18rpx;
    box-shadow: 0px 3px 5px 0px rgba(77,203,202,0.75);
    margin-bottom: 27rpx;
}

.r-l-item.r-l-item-return{
    border: 1px solid #959594;
    box-shadow:0px 5px 13px 0px #959594;

}

.r-l-i-img{
    width: 200rpx;
    height: 200rpx;
    margin: 25rpx 35rpx;
    text-align: center;
}

.r-l-i-img image{
    width: 200rpx;
    height: 200rpx;
}

.r-l-item view{
    float: left;
}

.r-l-i-msg{
    width: 391rpx;
    margin-top: 29rpx;
}


.r-l-i-name{
    font-size:28rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    height: 85rpx;

    word-break: break-all;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.r-l-i-author{
    font-size:24rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:36rpx;
}

.r-l-i-time{
    font-size:24rpx;
    font-weight:400;
    color:rgba(51,51,51,1);
    line-height:36rpx;
    height: 55rpx;
}

.r-l-i-msg .r-l-i-btn{
    width:120rpx;
    height:50rpx;
    line-height:50rpx;
    text-align: center;
    border:1px solid rgba(77, 203, 202, 1);
    border-radius:15rpx;
    font-size:24rpx;
    font-weight:400;
    color:rgba(77,203,202,1);
    float: right;
}

.getMore{
    color: #a8a8a8;
    font-size: 26rpx;
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}















